<div class="large-container center-block">

  <h1> <%=@article.title %> </h1>
  <div>
    <p> Escrito por: <strong> <%= @article.educator.email %> </strong>
        Educador: <strong> <%= @article.educator.first_name %> </strong>
        <strong> <%= @article.educator.last_name %> </strong>
      <% if @article.educator.avatar.attached? %>
        <%= image_tag url_for(@article.educator.avatar), height:30 %>
      <% end %>
    </p>
  </div>

  <div>
    <%= @article.content %>
  </div>

  <div class="margin-top">
  <p class="label">Tags</p>
  <% @article.types.each do |type| %>
    <span class="badge badge-pill padding" style="background-color:<%= type.color %>">
      <%= link_to type.title, type, class:"text-white" %>
    </span>
  <% end %>
  </div>

  <div>
  <!-- <%= link_to "Eliminar el articulo", @article, method: :delete %> -->
  <% if current_educator == @article.educator %>
  <%= link_to 'Eliminar el articulo', '#', "data-toggle"=>"modal", "data-target" => "#delete-#{@article.id}" %>
      <div class="modal fade" id="delete-<%= @article.id %>" role="dialog">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal">Confirmacion</button>
            </div>
            <div class="modal-body">
              <p>Desea borrar el articulo?</p>
            </div>
            <div class="modal-footer">
              <div class="modal-footer">
                <%= link_to 'Delete', article_path(@article), method: :delete, :class => 'btn btn-danger' %>
                  <a href="#" data-dismiss="modal" class="btn btn-warning">Cancel</a>
              </div>
            </div>
          </div>
        </div>
     </div>
    |
    <% end %>
    <%= link_to 'Back', articles_path %>
    <!-- <%= link_to "Eliminar el articulo", @article, method: :delete, :class => "btn btn-danger"%> -->
  </div>

</div>
